<div class="row">
  <% todos.each do |todo| %>
    <div class="col-md-6">
      <div class="text-<%= todo_status_for_css todo %> card">
        <%= link_to task_list_todos_path(todo.task_list.id) do %>
        <p class="h3"><%= todo.item %></p>
        <p><%= todo_status(todo) %></p>
        <p>期限: <%= todo.todo_limit %></p>
        <span class="glyphicon glyphicon-chevron-right pull-right"></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
